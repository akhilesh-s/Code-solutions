#include<bits/stdc++.h>

using namespace std;

int main()
{
	int n;
	string s[100];
	cin >> n;
	for(int i=0;i<n;i++)
		cin >> s[i];
	
	for(int j=0;j<n;j++)
	{
		int k=0;
		k=s[j].length();
		if(s[j].length()>10)
			cout << s[j][0] << s[j].length()-2  << s[j][k-1] << endl;
		else
			cout << s[j] << endl;
	}
}
